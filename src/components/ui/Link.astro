---
interface Props {
  to: string
  class?: string
}

const { to, class: className = '' } = Astro.props
---

<a 
  href={to} 
  class={`inline-flex items-center gap-2 text-foreground transition-all duration-300 hover:text-primary relative group ${className}`}
>
  <slot />
  <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full shadow-[0_0_8px_hsl(151_100%_50%/0.6)]"></span>
</a>
