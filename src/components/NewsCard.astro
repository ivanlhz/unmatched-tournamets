---
interface Props {
	title: string;
	description: string;
	image: string;
	link: string;
	featured?: boolean;
}

const { title, description, image, link, featured = false } = Astro.props;
---

<a 
	href={link}
	class={`relative overflow-hidden group cursor-pointer min-h-[300px] md:min-h-0 ${featured ? 'md:row-span-2' : ''}`}
>
	<img 
		src={image} 
		alt={title}
		class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110 opacity-40 group-hover:opacity-50"
	/>
	<div class="absolute inset-0 bg-gradient-to-t from-background via-background/80 to-background/40"></div>
	<div class={`absolute bottom-0 left-0 right-0 p-4 md:p-6 ${featured ? 'md:p-8' : ''}`}>
		<h2 class={`font-bold mb-2 md:mb-3 text-foreground group-hover:text-primary transition-colors ${featured ? 'text-2xl md:text-3xl' : 'text-lg md:text-xl'}`}>
			{title}
		</h2>
		<p class={`text-muted-foreground text-sm mb-3 ${featured ? 'md:mb-4 md:text-base' : ''}`}>
			{description}
		</p>
		<span class="text-primary font-medium group-hover:underline text-sm">
			Leer más →
		</span>
	</div>
</a>
