---
interface Props {
	title: string;
	description: string;
	image: string;
	link: string;
	featured?: boolean;
}

const { title, description, image, link, featured = false } = Astro.props;
---

<a 
	href={link}
	class={`relative overflow-hidden group cursor-pointer ${featured ? 'row-span-2' : ''}`}
>
	<img 
		src={image} 
		alt={title}
		class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110 opacity-40 group-hover:opacity-50"
	/>
	<div class="absolute inset-0 bg-gradient-to-t from-background via-background/80 to-background/40"></div>
	<div class={`absolute bottom-0 left-0 right-0 ${featured ? 'p-8' : 'p-6'}`}>
		<h2 class={`font-bold mb-3 text-foreground group-hover:text-primary transition-colors ${featured ? 'text-3xl' : 'text-xl mb-2'}`}>
			{title}
		</h2>
		<p class={`text-muted-foreground ${featured ? 'mb-4' : 'text-sm mb-3'}`}>
			{description}
		</p>
		<span class={`text-primary font-medium group-hover:underline ${featured ? '' : 'text-sm'}`}>
			Leer más →
		</span>
	</div>
</a>
